---
import { Icon } from 'astro-icon/components';
---
<div class="artistic-delimiter">
	<Icon name="mdi:glass-tulip" size={24}/>
</div>

<style lang="scss">
	.artistic-delimiter {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		margin-top: 1rem;
		margin-bottom: 1rem;
		color: var(--color-offwhite);

        &::before, &::after {
            content: " ";
			margin-left: 8px;
			margin-right: 8px;
            height: 0px;
			width: 80px;
			border-bottom: 1px solid var(--color-offwhite);
			background-color: antiquewhite;
        }
	}
</style>
