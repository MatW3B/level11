<style lang="scss">
	$strokeColor: #fff;
	$fillColor: #fff;

	.beverages {
		$strokeColor: var(--color-caramel) !global;
		$fillColor: var(--color-caramel) !global;
	}

	.artistic-swirl {
		stroke: $strokeColor;
		fill: none;

		.main {
			stroke-width: 3.9;
		}

		.detail {
			stroke-width: 3.9;
		}

		.endArrow {
			stroke-width: 3.7;
			fill: $fillColor;
		}

		.arrow {
			stroke-width: 1.9;
			fill: $fillColor;
		}
	}
</style>
