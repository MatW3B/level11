---
import { getCollection } from "astro:content";
interface Props {
	drinkData: typeof drinksCollection[number]["data"];
}
const drinksCollection = await getCollection("drinks");
const { drinkData } = Astro.props;

---

<div class="drink__container">
	<h3 class="drink__title">{drinkData.title}</h3>
	<div class="drink__description">{drinkData.description}</div>
	<div class="drink__ingredients">
		{
			drinkData.ingredients.map((ingredient: string, index: number) => (
				<>
					<span class="drink__ingredient">{ingredient}</span>
					{index !== drinkData.ingredients.length - 1 && <span>&</span>}
				</>
			))
		}
	</div>
</div>

<style lang="scss">
	@use "/src/styles/mixins.scss" as *;

	.drink__container {
		margin-bottom: 16px;
	}

	.drink__title {
		font-family: "Rosarivo", sans-serif;
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--color-caramel);
		margin-bottom: 12px;

		&::after {
			content: "";
			display: block;
			width: 100%;
			height: 1px;
			background-color: color-mix(in srgb, var(--color-caramel), transparent 33%);
			margin-top: -4px;
		}
	}

	.drink__description {
		font-family: "Libre Baskerville", sans-serif;
		font-style: italic;
		font-size: 1rem;
		font-weight: 500;

		margin-bottom: 8px;
	}

	.drink__ingredients {
		font-size: 0.88rem;
		font-style: italic;
		margin-bottom: 8px;
	}

	.drink__ingredient {
		font-family: "Rosarivo", sans-serif;
		font-weight: 500;
	}
</style>
